<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellowbackground"
    tools:context=".taikhoan.RankingActivity">

    <ImageView
        android:id="@+id/imgVBackRank"
        android:layout_width="80dp"
        android:layout_height="46dp"

        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        android:tint="@color/color_white"

        app:layout_constraintEnd_toStartOf="@+id/textViewRank"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseAppTint" />

    <ImageView
        android:id="@+id/imagerank1"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"

        android:layout_marginBottom="88dp"
        android:src="@drawable/top1"
        app:layout_constraintBottom_toTopOf="@+id/userranklist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imagerank3"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"

        android:layout_marginEnd="5dp"
        android:layout_marginBottom="68dp"
        android:src="@drawable/top3"
        app:layout_constraintBottom_toTopOf="@+id/userranklist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toEndOf="@+id/imagerank1" />

    <TextView
        android:id="@+id/tvpointrank2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-1dp"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="100"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userranklist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagerank2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvpointrank1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="100"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userranklist"
        app:layout_constraintEnd_toStartOf="@+id/tvpointrank3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/tvpointrank2"
        app:layout_constraintTop_toBottomOf="@+id/imagerank1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvpointrank3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="100"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userranklist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagerank3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView

        android:id="@+id/imagerank2"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"

        android:layout_marginStart="5dp"
        android:layout_marginBottom="68dp"
        android:src="@drawable/top2"
        app:layout_constraintBottom_toTopOf="@+id/userranklist"
        app:layout_constraintEnd_toStartOf="@+id/imagerank1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userranklist"
        android:layout_width="411dp"
        android:layout_height="482dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="Leader board"
        android:textColor="@color/color_white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>